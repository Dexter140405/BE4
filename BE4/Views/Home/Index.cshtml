@{
    ViewBag.Title = "Home Page";
}

@model BE4.Models.ViewModel.HomeProductVM
<head>
    <link href="~/Content/Style/StyleSheet1.css" rel="stylesheet" />
    <style>
        /*Style cho phần BANNER*/
        .banner {
            background-image: url('../../content/img/bannertiki.jpg');
            background-size: cover;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 300px;
        }

        .banner-container {
            text-align: center;
            color: white;
        }

            .banner-container h2 {
                font-size: 2.5rem;
            }

            .banner-container p {
                font-size: 2rem;
            }

        .btnBanner {
            display: inline-block;
            padding: 5px 20px;
            background-color: darkorange;
            color: white;
            text-decoration: none;
            font-weight: bold;
        }

        /*Style cho phần SEARCH*/
        .search-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .search-input {
            width: 500px;
            padding: 10px;
            border: 1px solid #808080;
            border-radius: 5px 0 0 5px;
        }

        .search-button {
            padding: 10px 20px;
            background-color: brown;
            border: none;
            border-radius: 0 5px 5px 0;
            cursor: pointer;
        }

            .search-button:hover {
                background-color: #555;
            }

        .searchProd {
            text-align: center;
        }

        #searchProd h2 {
            font-size: 2em;
            margin-bottom: 20px;
            color: brown;
        }

        /*Style của FEARURE PRODUCT*/
        .featureProd {
            text-align: left;
        }

        .feature-container {
            display: flex;
            overflow-x: auto; /*cho phép cuộn ngang*/
            scroll-snap-type: x mandatory;
        }

        .fproduct-item { /*hiển thị dạng  slider*/
            width: 160px; /*điều chình theo độ rộng màn hình */
            max-height: 400px;
            margin: 10px;
            gap: 5px; /*khoảng cách giữa 2 item*/
            flex: 0 0 auto; /*để các sản phẩm không co giãn */
            scroll-snap-align: start; /*để các sản phẩm dừng lại ở đầu khi cuộn*/
        }

            .fproduct-item img {
                padding: 5px;
                max-height: 160px;
                vertical-align: central;
                background-color: transparent;
            }

        /*Style của datalist PRODUCT*/
        .listProduct {
            text-align: left;
        }

        .list-container {
            list-style-type: none;
            display: grid;
            grid-template-columns: repeat(auto-fit,minmax(100px,1fr));
            gap: 20px;
            padding: 0;
            margin: 0;
        }

        .lproduct-item {
            max-height: 500px;
        }

            .lproduct-item img {
                max-height: 120px; /*điều chỉnh theo độ rộng màn hình*/
            }

        .detailproduct-item {
            width: 150px; /*điều chỉnh theo độ rộng màn hình*/
            max-height: 400px;
            margin: 10px;
            gap: 5px;
            flex: 0 0 auto; /*để các sản phẩm không co giãn*/
            scroll-snap-align: start; /*để các sản phẩm dừng lại ở đầu khi cuộn*/
        }

            .detailproduct-item img {
                max-height: 100px;
            }

        /*các thuộc tính chung cuả FEATURE và NEW sản phẩm*/

        .fproduct-item, .lproduct-item, .detailproduct-item {
            border: 1px groove #808080;
            border-radius: 10px;
        }

        .featureProd h2, .listProduct h2 {
            font-size: 2em;
            margin-bottom: 20px;
            color: brown;
            text-align: center;
        }

        .prodPrice {
            font-size: large;
            color: blue;
            font-weight: bolder;
            padding: 10px 5px 0px 5px;
        }

        .prodName {
            color: black;
            font-weight: bold;
            padding: 0px 5px 0px 5px;
        }

        .prodCate {
            color: black;
            padding: 0 5px 0px 5px;
        }

        .prodSale {
            font-size: small;
            color: dimgrey;
            padding: 0px 5px 0px 5px;
        }
    </style>
</head>

@*Phần banner*@
<section class="container-fluid banner">
    <div class="banner-container">
        <h2>Chào mừng đến trang web E-commerce</h2>
        <p>Mua sắm trực tuyến với hàng ngàn sản phẩm đa dạng và chất lượng</p>
        <a href="#" class="btnBanner">Bắt đầu mua sắm</a>
    </div>
</section>

<hr />
@* sản phẩm nổi bật *@
@Html.Partial("_PVFeaturedProduct", Model)

@* phần sản phẩm mới  *@
@Html.Partial("_PVNewProduct", Model)
